<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <style>
            {{asset "quote-styles.css" "utf8"}}
        </style>
    </head>
    <body>
      <div class="quoteContainer">
         <div class="quoteHeader">
             <img src="{{logoUrl}}" style="max-width: 20%; height: auto"/>
             <table>
                 <tr>
                     <td class="title">
                         Quote
                     </td>
                 </tr>
                 <tr>
                     <td class="subTitle">
                         {{date}}
                     </td>
                 </tr>
             </table>
         </div>
         <table class="contactDetails">
             <tr>
                 <td class="detailsCell">
                     <span class="detailsTitle">COMPANY</span> <span class="detailsValue">{{businessName}}</span>
                 </td>
                 <td>
                     <span class="detailsTitle">BID FOR</span> <span class="detailsValue">{{clientName}}</span>
                 </td>
             </tr>
             <tr>
                 <td class="detailsCell">
                    <span class="detailsTitle">ADDRESS</span> <span class="detailsValue">{{businessAddress}}</span>
                 </td>
                 <td>
                     <span class="detailsTitle">VALID FOR</span> <span class="detailsValue">{{validFor}}</span>
                 </td>
             </tr>
             <tr>
                 <td class="detailsCell">
                     <span class="detailsTitle">PHONE</span> <span class="detailsValue">{{operatorPhoneNumber}}</span>
                 </td>
             </tr>
             <tr>
                 <td class="detailsCell">
                     <span class="detailsTitle">EMAIL</span> <span class="detailsValue">{{operatorEmailAddress}}</span>
                 </td>
             </tr>
         </table>

         <hr class="solid"/>
        
        <div>
            <p>
                Hello {{clientName}},
            </p>
            <p>
                This is your new quote from {{businessName}}. To accept this quote, please reach out to {{operatorName}} at {{operatorPhoneNumber}} or {{operatorEmailAddress}}.
            </p>
            <p>
                Thank you!
            </p>
        </div>
         
         <div class="topMargin">
            <table class="serviceDetails">
                <tr>
                    <th class="leftAlign">
                        SERVICE
                    </th>
                    <th class="rightAlign">
                        PRICE
                    </th>
                </tr>
                <tr class="spacer"></tr>
                {{#each serviceDetails}}
                    <tr class="serviceText">
                        <td class="leftAlign">
                            <span>{{service.name}}</span>
                            <span class="frequencyText">{{service.frequency}}</span>
                            {{#if service.tag}}
                            <span class="tag">{{service.tag}}</span>
                            {{/if}}
                        </td>
                        <td class="rightAlign">
                            ${{price}}
                        </td>
                    </tr>
                    {{#each lineItems}}
                    <tr class="lightText">
                        <td class="lineItemTitle">
                            {{name}}
                        </td>
                        <td class="rightAlign">
                            ${{price}}
                        </td>
                    </tr>
                    {{/each}}

                    {{#if @last}}
                    {{else}}
                    <tr class="last">
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                    {{/if}}
                {{/each}}
            </table>
         </div>

        <div class="topMargin">
            <table class="serviceDetails">
                <tr>
                    <th class="leftAlign">
                        NOTES
                    </th>
                </tr>
            </table>

            <p>
                {{notes}}
            </p>
        </div>
       
        </div>
        <footer class="footer" ">
            <div style="display: flex;">
                <div class="waterMark">
                        <img src="{{asset "black.png" "dataURI"}}" style="width: 10px; height: 10px;" />
                        <div style="margin-left: 4px;">QUOTE GENERATED BY CHECK</div> 
                </div>
                <div class="footerSite">
                    www.hellocheck.co
                </div>
            </div>
            <div class="footerSite">
                Copyright 2022 LSB Software, Inc. All rights reserved.
            </div>

        </footer>

    </body>
</html>